# Hermes KMS API Environment Configuration

# Application
NODE_ENV=development
PORT=5001
API_PREFIX=/api/v1

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/hermes

# HashiCorp Vault
VAULT_ENDPOINT=http://localhost:8200
VAULT_TOKEN=your-vault-token-here
VAULT_NAMESPACE=
VAULT_TRANSIT_MOUNT=transit
VAULT_REQUEST_TIMEOUT=5000
VAULT_KEY_NAME=hermes-master-key

# JWT
JWT_ACCESS_SECRET=your-access-token-secret-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
JWT_ISSUER=hermes-kms
JWT_AUDIENCE=hermes-api

# Security
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000
SESSION_DURATION=604800000
PASSWORD_MIN_LENGTH=12
MFA_ISSUER=Hermes KMS
TRUSTED_PROXIES=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX=5

# CORS
CORS_ORIGIN=http://localhost:5001,http://localhost:5173

# Logging
LOG_LEVEL=debug
LOG_FORMAT=dev

# Features
ENABLE_REGISTRATION=true
ENABLE_MFA=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_AUDIT_LOG=true
ENABLE_SWAGGER=true

# Temporary Shares
SHARE_DEFAULT_EXPIRY=3600000
SHARE_MAX_EXPIRY=2592000000
SHARE_MAX_ATTEMPTS=3

# Email (Optional)
EMAIL_FROM=noreply@hermes-kms.com
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
